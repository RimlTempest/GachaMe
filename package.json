{
  "private": true,
  "name": "remix-prisma-starter",
  "description": "A Remix starter with Prisma and Vercel",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf .eslintcache playwright-report build public/build .cache",
    "start": "remix-serve build",
    "build": "npm run build:css && remix build",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "postcss styles --base styles --dir app/styles -w",
    "postinstall": "remix setup node",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy && npm run db:generate",
    "db:gen:migration": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\" --cache",
    "test": "dotenv -e .env.test -- bash -c 'npm run build && playwright test'",
    "test:ci": "npm run db:migrate && npm run build && playwright test",
    "ts-check": "tsc --project tsconfig.json --noEmit --skipLibCheck",
    "prepare": "husky install",
    "deploy": "npm run db:migrate && npm run build"
  },
  "dependencies": {
    "@formkit/auto-animate": "^1.0.0-beta.5",
    "@prisma/client": "4.9.0",
    "@remix-run/react": "1.11.1",
    "@remix-run/serve": "1.11.1",
    "@remix-run/server-runtime": "^1.11.1",
    "@remix-run/vercel": "1.11.1",
    "accept-language-parser": "^1.5.0",
    "argon2": "^0.30.2",
    "classnames": "^2.3.2",
    "daisyui": "^2.47.0",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-use": "^17.4.0",
    "remix": "1.11.1",
    "tailwindcss": "^3.2.4",
    "yup": "^0.32.11",
    "zustand": "^4.1.5"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@playwright-testing-library/test": "^4.5.0",
    "@playwright/test": "^1.29.1",
    "@remix-run/dev": "1.11.1",
    "@types/accept-language-parser": "^1.5.3",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^7.0.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-lodash": "^7.4.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.9.1",
    "husky": ">=8.0.2",
    "lint-staged": ">=13.1.0",
    "postcss": "^8.4.20",
    "postcss-cli": "^10.1.0",
    "prettier": "^2.8.1",
    "prisma": "4.9.0",
    "prisma-database-cleaner": "^0.0.2",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --cache --fix"
  }
}
